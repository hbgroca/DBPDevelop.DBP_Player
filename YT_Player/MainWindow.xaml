<Window x:Class="YT_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:YT_Player"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="DBP Player" Height="565" Width="300" Foreground="#666"
        Icon="/assets/app.ico"
        >

   <Border >
      <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto" />
         </Grid.RowDefinitions>

         <!--Titlebar-->
         <StackPanel Grid.Row="0" x:Name="TopBar" MouseDown="TopBar_MouseDown" Background="Transparent" Cursor="Hand">
            <Grid>
               <Grid.ColumnDefinitions >
                  <ColumnDefinition Width="auto"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="auto"/>
               </Grid.ColumnDefinitions>

               <Border CornerRadius="5,30,0,0" 
                        Background="#000" Width="100" 
                        Grid.Column="0" 
                        Height="25">
                  <TextBlock Padding="10,5,10,5" FontSize="12" Foreground="#555">
                        DBP Player
                  </TextBlock>
               </Border>
               <Button x:Name="ExitButton" Style="{StaticResource ExitButton}" Grid.Column="2" Click="ExitButton_Click" Cursor="Hand"/>
            </Grid>
         </StackPanel>

         <!--Main-->
         <Border Grid.Row="1" Background="#000">
            <wv2:WebView2 x:Name="webView" DefaultBackgroundColor="Black"/>
         </Border>

         <!--Footer-->
         <Border Grid.Row="2" Background="#000">
            <Grid>
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="auto"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="auto"/>
               </Grid.ColumnDefinitions>

               <TextBlock Grid.Column="1" 
                  Background="#000" 
                  Width="300" 
                  TextAlignment="Center"
                  Foreground="#555"
                  >
                  DBP Develop 2025
               </TextBlock>


                  <Label Grid.Column="2" 
                        Padding="0" Foreground="#333" 
                        Margin="0" 
                        MouseDown="ResizeGrip_MouseDown"
                        MouseMove="ResizeGrip_MouseMove"
                        MouseUp="ResizeGrip_MouseUp"
                        Cursor="SizeNWSE"
                        >
                     <Label.RenderTransform>
                        <TransformGroup>
                           <ScaleTransform ScaleX="1" ScaleY="1"/>
                           <SkewTransform AngleX="0" AngleY="0"/>
                           <RotateTransform Angle="-45"/>
                           <TranslateTransform X="-6" Y="7"/>
                        </TransformGroup>
                     </Label.RenderTransform>
                  &#9776;
               </Label>
            </Grid>
         </Border>
      </Grid>
   </Border>
</Window>